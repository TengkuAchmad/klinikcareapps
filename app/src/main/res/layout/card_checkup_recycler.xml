<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="5dp"
    android:background="@drawable/button_white_rounded"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingVertical="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userName_checkup_recycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Santa Silalahi"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/userNIK_checkup_recycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIK. 01239812401"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="normal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userTicket_checkup_recycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="001"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:paddingVertical="5dp"
            android:paddingHorizontal="20dp"
            android:background="@drawable/button_rounded"/>

    </LinearLayout>



</androidx.cardview.widget.CardView>