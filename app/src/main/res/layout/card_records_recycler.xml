<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp"
    android:background="@drawable/button_white_rounded"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingVertical="20dp">

            <TextView
                android:id="@+id/userName_checkup_recycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diperiksa di : Klinik Care"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/value_hasil_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/03/2024"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:paddingVertical="5dp"
                android:paddingHorizontal="20dp"
                android:background="@drawable/button_rounded"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/label_hasil_diagnosa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HASIL DIAGNOSA"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/userName_checkup_recycler"/>

            <TextView
                android:id="@+id/value_hasil_diagnosa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hasil diagnosa...."
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                android:background="@drawable/button_light_grey"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@id/label_hasil_diagnosa"/>

            <TextView
                android:id="@+id/label_hasil_alergi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HASIL ALERGI"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/value_hasil_diagnosa"/>

            <TextView
                android:id="@+id/value_hasil_alergi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hasil Alergi......."
                android:background="@drawable/button_light_grey"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@id/label_hasil_alergi"/>

            <TextView
                android:id="@+id/label_hasil_obat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RESEP OBAT"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/value_hasil_alergi"/>

            <TextView
                android:id="@+id/value_hasil_obat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resep Obat....."
                android:background="@drawable/button_light_grey"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@id/label_hasil_obat"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>